<%= form_for([@article, @article.comments.build ], html: { id: 'comment_form' }) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit id: 'submit_button' %>
  </p>
<% end %>
